{
  "name": "@samatech/onflow-ts",
  "version": "0.8.0",
  "description": "TypeScript test and dApp utils for the Flow blockchain.",
  "module": "dist/esm/index.js",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist/* && rm -rf out-tsc/*",
    "build": "npm run clean && tsc && tsc -p tsconfig.esm.json && rollup -c rollup.config.js && cp out-tsc/esm/index.d.ts dist/esm/ && cp lib/declaration.d.ts dist/",
    "test": "jest --config=jest.config.ts",
    "lint": "eslint --ext .js,.ts .",
    "format": "prettier -w \"{**/*,*}.{ts,js,json}\"",
    "format:check": "prettier --check \"{**/*,*}.{ts,js,json}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/samatechtw/onflow-ts.git"
  },
  "keywords": [
    "onflow",
    "typescript",
    "testing"
  ],
  "author": "Sam Pullman",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/samatechtw/onflow-ts/issues"
  },
  "homepage": "https://github.com/samatechtw/onflow-ts#readme",
  "dependencies": {
    "@onflow/fcl": "1.0.2",
    "chalk": "4.1.2",
    "elliptic": "^6.5.4",
    "sha3": "^2.1.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-angular": "^16.2.1",
    "@jest/globals": "^28.1.0",
    "@onflow/config": "^1.0.1",
    "@onflow/fcl": "^1.0.2",
    "@onflow/transport-grpc": "^1.0.1",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@types/elliptic": "^6.4.14",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.18",
    "@typescript-eslint/eslint-plugin": "5.12.0",
    "@typescript-eslint/parser": "5.12.0",
    "eslint": "8.9.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-node": "11.1.0",
    "google-protobuf": "3.19.4",
    "isomorphic-fetch": "^3.0.0",
    "jest": "^27.5.1",
    "prettier": "2.5.1",
    "rollup": "^2.67.3",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-polyfill-node": "^0.9.0",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.4"
  }
}
