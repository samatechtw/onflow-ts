{
  "name": "@samatech/onflow-ts",
  "version": "0.4.0",
  "description": "TypeScript test and dApp utils for the Flow blockchain.",
  "module": "dist/index.js",
  "main": "dist/cjs/index.js",
  "types": "dist/cjs/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist/* && tsc && tsc -p tsconfig.esm.json && rollup -c rollup.config.js",
    "test": "jest --config=jest.config.ts",
    "lint": "eslint --ext .js,.ts .",
    "format": "prettier -w \"{**/*,*}.{ts,js,json}\"",
    "format:check": "prettier --check \"{**/*,*}.{ts,js,json}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/samatechtw/onflow-ts.git"
  },
  "keywords": [
    "onflow",
    "typescript",
    "testing"
  ],
  "author": "Sam Pullman",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/samatechtw/onflow-ts/issues"
  },
  "homepage": "https://github.com/samatechtw/onflow-ts#readme",
  "dependencies": {
    "@samatech/onflow-fcl-esm": "^0.5.5",
    "elliptic": "^6.5.4",
    "sha3": "^2.1.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-angular": "^16.0.0",
    "@onflow/config": "^0.0.2",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@types/elliptic": "^6.4.14",
    "@types/jest": "^27.0.3",
    "@types/node": "^17.0.14",
    "@typescript-eslint/eslint-plugin": "5.10.2",
    "@typescript-eslint/parser": "5.10.2",
    "eslint": "8.8.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-node": "11.1.0",
    "google-protobuf": "3.19.1",
    "jest": "^27.4.5",
    "prettier": "2.5.1",
    "rollup": "^2.67.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-polyfill-node": "^0.8.0",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  }
}
