{
  "name": "@samatech/onflow-ts",
  "version": "0.10.0",
  "description": "TypeScript test and dApp utils for the Flow blockchain.",
  "module": "dist/esm/index.js",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist/* && rm -rf out-tsc/*",
    "build": "npm run clean && tsc && tsc -p tsconfig.esm.json && rollup -c rollup.config.js && cp out-tsc/esm/index.d.ts dist/esm/ && cp -rf lib/@types dist/",
    "test": "jest -c=jest.config.ts --runInBand",
    "lint": "eslint --ext .js,.ts .",
    "format": "prettier -w \"{**/*,*}.{ts,js,json}\"",
    "format:check": "prettier --check \"{**/*,*}.{ts,js,json}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/samatechtw/onflow-ts.git"
  },
  "keywords": [
    "onflow",
    "typescript",
    "testing"
  ],
  "author": "Sam Pullman",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/samatechtw/onflow-ts/issues"
  },
  "homepage": "https://github.com/samatechtw/onflow-ts#readme",
  "dependencies": {
    "@onflow/fcl": "1.3.0",
    "@onflow/fcl-config": "^0.0.1",
    "elliptic": "^6.5.4",
    "picocolors": "1.0.0",
    "rlp": "^3.0.0",
    "sha3": "^2.1.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-angular": "^17.1.0",
    "@jest/globals": "^29.1.1",
    "@onflow/config": "^1.0.3",
    "@onflow/types": "1.0.3",
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^14.1.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@types/elliptic": "^6.4.14",
    "@types/jest": "^29.0.3",
    "@types/node": "^18.7.23",
    "@typescript-eslint/eslint-plugin": "5.38.1",
    "@typescript-eslint/parser": "5.38.1",
    "eslint": "8.24.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-node": "11.1.0",
    "isomorphic-fetch": "^3.0.0",
    "jest": "^29.1.1",
    "prettier": "2.7.1",
    "rollup": "^2.79.1",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-polyfill-node": "^0.10.2",
    "ts-jest": "^29.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  }
}
