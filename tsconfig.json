{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist/",
    "target": "es2015",
    "types": ["node"],
    "moduleResolution": "node",
    "lib": ["esnext"],
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["dist", "**/*.spec.ts", "jest.config.*"],
  "references": [
    {
      "path": "./tsconfig.spec.json"
    }
  ]
}
